# ChatBox Backend Environment Variables

# Server
APP_PORT=8081
APP_ENV=development
# debug, info, warn, error
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=chatbox-gin

# JWT (for authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Centrifugo (realtime messaging)
CENTRIFUGO_URL=http://localhost:8000
CENTRIFUGO_API_KEY=your_api_key_here
CENTRIFUGO_HMAC_SECRET=your_hmac_secret_here